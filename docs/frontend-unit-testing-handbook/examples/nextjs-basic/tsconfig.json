{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["vitest/globals", "node"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "test/**/*.ts", "test/**/*.tsx"],
  "exclude": ["node_modules"]
}